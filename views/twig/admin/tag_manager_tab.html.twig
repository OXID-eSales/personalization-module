<form action="{{ oViewConf.getSelfLink()|raw }}" method="post">
    {{ oViewConf.getHiddenSid()|raw }}
    <input type="hidden" name="cl" value="{{ sClassMain }}">
    <input type="hidden" name="fnc" value="save">
    <div>
        <input type=hidden name="confbools[blOePersonalizationTagManager]" value=false>
        <input type="checkbox" name="confbools[blOePersonalizationTagManager]" value=true {% if (blOePersonalizationTagManager) %}checked{% endif %}>
        {{ translate({ ident: "SHOP_MODULE_blOePersonalizationEnableTagManager" }) }}
    </div>
    <br/>
    <div>
        <input type="submit" value="{{ translate({ ident: "GENERAL_SAVE" }) }}">
    </div>
</form>

