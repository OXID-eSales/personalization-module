    <input type="hidden" name="cl" value="{{ sClassMain }}">
    <input type="hidden" name="fnc" value="upload">
    <input type="file" name="file_to_upload">
    <input type="submit" value="{{ translate({ ident: "OEPERSONALIZATION_UPLOAD_BUTTON_TITLE" }) }}">
</form>
