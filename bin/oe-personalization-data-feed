use OxidEsales\Facts\Facts;
use Webmozart\PathUtil\Path;

$autoloadFileExist = false;
$autoloadFiles = [
    __DIR__ . '/vendor/autoload.php',
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../vendor/autoload.php',
    __DIR__ . '/../../../vendor/autoload.php',
    __DIR__ . '/../../../../vendor/autoload.php',
    __DIR__ . '/../../../../../vendor/autoload.php',
];

foreach ($autoloadFiles as $autoloadFile) {
    if (file_exists($autoloadFile)) {
        require_once $autoloadFile;
        $autoloadFileExist = true;
        break;
    }
}

if (!$autoloadFileExist) {
    exit("Autoload file was not found!");
}

$facts = new Facts();
require_once(Path::join($facts->getSourcePath(), 'bootstrap.php'));

$exporter = new \OxidEsales\PersonalizationModule\Application\Export\ExportCommand();
$exporter->export($argv);
